<h1>Devour The Burger!</h1>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}
    <button class="change-devour" data-id="{{id}}">
      Devour Burger!
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured Thus Far!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>

{{!-- No need to change but the JS --}}
<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>